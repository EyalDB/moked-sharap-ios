# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

# Use modular headers globally for Swift compatibility with static libraries
use_modular_headers!

target 'מוקד שרפ' do
  # Don't use dynamic frameworks - use static libraries with modular headers
  # to avoid the Pods umbrella framework which has Hebrew encoding issues in CI
  # use_frameworks!

  # Add the pod for Firebase Cloud Messaging
  pod 'Firebase/Messaging'

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
    end
  end
end